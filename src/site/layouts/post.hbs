---
layout: default.hbs
---

<article>
    <h2>{{ title }}</h2>
    <h4>{{ subtitle }}</h4>

    <span class="month">{{ formatDate date "%b"}}</span>
    <span class="day">{{ formatDate date "%d"}}</span>
    <span class="year">, {{ formatDate date "%Y"}}</span>

    <section>
        {{> body }}
    </section>

</article>
